# Checkmate MCP Server Configuration
# Copy this file to .env and update with your values

# Required: Base URL of your Checkmate API
# For local development:
CHECKMATE_API_BASE=http://localhost:3000
# For Docker deployment (internal network):
# CHECKMATE_API_BASE=http://checkmate-app:3000

# Required: Authentication token for Checkmate API
# Obtain this from your Checkmate instance (User Settings > API Tokens)
CHECKMATE_API_TOKEN=your-api-token-here

# Optional: Logging
LOG_LEVEL=info

# Optional: Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Optional: Enable retry on failures
ENABLE_RETRY=false
MAX_RETRIES=3
